<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SoundLvl">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detect Sound level"
        android:id="@+id/detectSoundCheck"
        android:checked="true"
        android:height="50dp"
        android:maxHeight="100dp"
        android:onClick="recordChange"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="."
        android:id="@+id/dbg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/detectSoundCheck"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/statusText"
        android:height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar

        android:layout_width="360dp"
        android:layout_height="70dp"

        style="@android:style/Widget.ProgressBar.Horizontal"


        android:id="@+id/levelBar"

        android:max="150"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Ampl"
        android:id="@+id/labelAmpl"


        android:editable="false"
        android:textSize="25dp"
        android:layout_below="@+id/levelBar"
        android:layout_alignLeft="@+id/detectSoundCheck"
        android:layout_alignStart="@+id/detectSoundCheck" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:id="@+id/txtAmpl"
        android:text="3211"
        android:textSize="27dp"
        android:layout_below="@+id/levelBar"
        android:layout_alignRight="@+id/levelBar"
        android:layout_alignEnd="@+id/levelBar" />


    <!--

       android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/detectSoundCheck"
        android:layout_alignEnd="@+id/detectSoundCheck"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" -->

</RelativeLayout>
